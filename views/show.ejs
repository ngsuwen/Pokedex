<body>
    <nav class="navbar fixed-top navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <ul class="navbar-nav">
                <li class="nav-item">
                  <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/new">New</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container">
        <h1 class="mb-5"><%=data.name%> <small class="text-muted">#<%=data.id%></small></h1>
        <img class="mb-5" src=<%=data.img%>>
        <% for (let type of data.type){ %>
            <div class=<%=type%>><%=type%></div>
        <% } %>
        <table class="table">
            <tr>
                <td class="stats">HP: </td>
                <td><%=data.stats.hp%></td>
            </tr>
            <tr>
                <td class="stats">Attack: </td>
                <td><%=data.stats.attack%></td>
            </tr>
            <tr>
                <td class="stats">Defense: </td>
                <td><%=data.stats.defense%></td>
            </tr>
            <tr>
                <td class="stats">Sp Attack:</td>
                <td><%=data.stats.spattack%></td>
            </tr>
            <tr>
                <td class="stats">Sp Defense: </td>
                <td><%=data.stats.spdefense%></td>
            </tr>
            <tr>
                <td class="stats">Speed:</td>
                <td><%=data.stats.speed%></td>
            </tr>
        </table>
        <div class="btn-toolbar justify-content-between">
            <% if (Number(index)>0){ %>
                <form action="/<%=Number(index)-1%>"><button class="btn btn-light btn-sm">Prev</button></form>
            <% } %>
            <% if (Number(index)<length){ %>
                <form action="/<%=Number(index)+1%>"><button class="btn btn-light btn-sm">Next</button></form>
            <% } %>
        </div>
    </div>
</body>

